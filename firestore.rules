rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read for settings (branding)
    match /artfest_v2/settings {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read/write for all other data documents within the app version collection
    match /artfest_v2/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}