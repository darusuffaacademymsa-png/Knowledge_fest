rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow the app to read configuration even if not logged in (for login screen branding)
    match /artfest/data_v1 {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Secure all other documents
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}